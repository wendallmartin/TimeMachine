<UserControl x:Class="TheTimeApp.Controls.WPFWeekViewBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheTimeApp.Controls"
             mc:Ignorable="d" 
             Background="Gray"
             MouseLeave="OnMouseLeave" MouseEnter="OnMouseEnter" MouseRightButtonDown="OnMouseDown"
             d:DesignHeight="30" d:DesignWidth="350">
    <Grid>
        <Button x:Name="delete" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Width="26" Height="28" Margin="0,1,0,0" Visibility="Visible" Click="OnDeleteDay"/>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" MouseLeave="OnMouseLeave" MouseEnter="OnMouseEnter" MouseRightButtonDown="OnMouseDown"/>

    </Grid>
</UserControl>

<UserControl x:Class="TheTimeApp.Controls.WPFDayViewBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheTimeApp.Controls"
             mc:Ignorable="d" 
             Background="Green"
             MouseEnter="OnMouseEnter"
             MouseLeave="OnMouseLeave"
             MouseDown="OnDayClick"
             d:DesignHeight="30" d:DesignWidth="350">
    <Grid Margin="0,0,0,280">
        <Button x:Name="delete" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Height="28" Margin="0,0,0,-35" Width="26" Visibility="Hidden"
                MouseEnter= "OnMouseEnter" MouseLeave="OnMouseLeave" PreviewMouseDown="OnDeleteDay"/>
        <Label x:Name="label" HorizontalAlignment="Left" Height="30" Margin="0,2,0,-32" VerticalAlignment="Top" Width="Auto" Content="Label" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave" MouseDown="OnDayClick">
        </Label>
    </Grid>
</UserControl>

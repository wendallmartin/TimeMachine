<Window x:Class="TheTimeApp.WPFTimeAppForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheTimeApp"
             mc:Ignorable="d" 
             WindowStartupLocation="CenterScreen" 
             ForceCursor="True" 
             WindowStyle="ThreeDBorderWindow" 
             Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
             Width="375"
             Height="350"
             Icon="Resources\timecardpic.png"
             Title="Time Clock"   
             d:DesignHeight="250">
    <Grid>
        <Button x:Name="Start_Button" Content="Start" Background="Green" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Width="Auto" Height="Auto" Margin="10,0,10,10" FontSize="36" Click="btn_Start_CheckedChanged" MinHeight="80"/>
        <TextBox x:Name="DayDetailsBox" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Width="Auto" Margin="45,60,45,100" MinHeight="120" TextChanged="OnDayDetailsChanged" AcceptsReturn="True" ScrollViewer.CanContentScroll="True">
        </TextBox>
        <Button Content="Report" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="Auto" Height="40" FontSize="14" Click="Report_Click" MinWidth="150"/>
        <Button Content="Settings" HorizontalAlignment="Right" Margin="0,10,20,0" VerticalAlignment="Top" Width="Auto" Height="40" FontSize="14" Click="Settings_Click" MinWidth="150"/>

    </Grid>
</Window>

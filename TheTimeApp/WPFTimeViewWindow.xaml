<Window x:Class="TheTimeApp.WPFTimeViewWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheTimeApp"
             Icon="Resources/timecardpic.png"
             mc:Ignorable="d" 
             Width="400" Height="600">
    <Grid>
        <ScrollViewer x:Name="ScrollViewer" Background="Gray" Margin="10" HorizontalAlignment="Center" Width="Auto" Height ="auto" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="StackPanel" Orientation="Vertical" Background="DarkGray" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
        </ScrollViewer>
    </Grid>
</Window>

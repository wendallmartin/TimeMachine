        <Label Content="Enter user name" HorizontalAlignment="Left" VerticalAlignment="Top" Height="27"/>
        <TextBox x:Name="txt_User" SelectedText ="new user"  HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="11,23,11,0"/>
